<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<!-- TODO títulos e texts estão hardcoded, é melhor por em strings -->
<!-- TODO buscar informações como quilómetros e horários aos apis do google -->
<!-- TODO ligar o numero de telemovel a app de chamadas  -->
<!-- TODO traduzir para inglês -->
<!-- TODO convem ter o número do dep, também-->
    <TextView
        android:id="@+id/tituloDeca"
        android:layout_width="361dp"
        android:layout_height="32dp"
        android:text="@string/deca"
        android:textSize="17sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/horario_deca"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horário"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tituloDeca" />

    <TextView
        android:id="@+id/horario_deca_horas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08:00-21:00"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/horario_deca"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/numero_deca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="234 370 389"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/servicos"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Serviços"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/numero_deca" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="387dp"
        android:layout_height="217dp"
        app:srcCompat="@drawable/printvideo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-58dp"
        android:layout_marginLeft="-1dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="56dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/cutlery"
        android:layout_marginLeft="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/servicos" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="56dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/air_conditioner"
        app:layout_constraintLeft_toRightOf="@+id/imageView4"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/servicos" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="56dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/television"
        app:layout_constraintLeft_toRightOf="@+id/imageView5"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/servicos" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="56dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/parking"
        app:layout_constraintLeft_toRightOf="@+id/imageView6"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/servicos" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:text="Número"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/horario_deca_horas"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="56dp"
        android:layout_height="54dp"
        app:srcCompat="@drawable/bunk"
        app:layout_constraintLeft_toRightOf="@+id/imageView7"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/servicos" />

    <!--acrescentar site de cada departamento-->
    <!--acrescentar grupo da UA https://www.facebook.com/groups/2227438122/ (para apoio para os mais perdidos)-->

</android.support.constraint.ConstraintLayout>