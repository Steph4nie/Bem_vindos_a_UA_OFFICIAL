<!-- TODO convem ter o número do dep, também-->
    <TextView
        android:id="@+id/tituloDeca"
        android:layout_width="361dp"
        android:layout_height="32dp"
        android:text="@string/deca"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="184dp" />

    <TextView
        android:id="@+id/horario_deca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horário"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tituloDeca" />

    <TextView
        android:id="@+id/horario_deca_horas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08:00-21:00"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/horario_deca"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/numero_deca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="234 370 389"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/horario_deca_horas"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/servicos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Serviços"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/numero_deca" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="412dp"
        android:layout_height="369dp"
        app:srcCompat="@drawable/printvideo"
        tools:layout_editor_absoluteX="-14dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tituloDeca"
        app:layout_constraintVertical_bias="0.704" />

