<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<!-- TODO títulos e texts estão hardcoded, é melhor por em strings -->
<!-- TODO buscar informações como quilómetros e horários aos apis do google -->
<!-- TODO ligar o numero de telemovel a app de chamadas  -->
<!-- TODO traduzir para inglês -->
    <TextView
        android:id="@+id/tituloDeca"
        android:layout_width="361dp"
        android:layout_height="32dp"
        android:text="@string/deca"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/km_deca"
        android:layout_width="358dp"
        android:layout_height="30dp"
        android:text="3 KM"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloDeca" />

    <TextView
        android:id="@+id/horario_deca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horário"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/km_deca"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/horario_deca_horas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08:00-21:00"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/horario_deca"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/numero_deca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="234 370 389"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/horario_deca_horas"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/leva_me_deca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leva-me até lá"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/numero_deca"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/servicos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/leva_me_deca"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <!--acrescentar site de cada departamento-->
    <!--acrescentar grupo da UA https://www.facebook.com/groups/2227438122/ (para apoio para os mais perdidos)-->

</android.support.constraint.ConstraintLayout>